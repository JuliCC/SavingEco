<h1>Welcome</h1>

<%= form_for @contact do |f| %>
	<div>
		<%= f.label :name %>
		<%= f.text_field :name %>
	</div>

	<div>
		<%= f.label :email %>
		<%= f.text_field :email %>
	</div>

	<div>
		<%= f.label :phone %>
		<%= f.text_field :phone %>
	</div>

	<div>
		<%= f.label :subject %>
		<%= f.text_field :subject %>
	</div>

	<div>
		<%= f.label :content %>
		<%= f.text_area :content %>
	</div>

	<div>
		<%= f.submit 'Send' %>
	</div>
	
<% end %>
<% if user_signed_in? %>
	<%= link_to "Ir a mi perfil", current_user %>
<% end %>